<%
  top_buttons ||= []
%>
<meta charset="UTF-8">
<!-- <meta name="viewport" content="width=device-width, initial-scale=1"> -->
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<!-- <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat"> -->
<style>
.template_row_content {
  font-size: 18px;
  text-align: justify;
  margin-left: 0;
  margin-right: auto;
  max-width: 700px;
}
.w3-padding-64 {
  padding:10px 20px !important;
}

.template_page .fa {
  font-size: 100px;
  /*color: #15cb12;*/
  background: -webkit-linear-gradient(45deg, #09009f, #00ff95 80%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
.w3-light-grey {
  background-color: #f8f8f8 !important;
}

.contact_us_msg {  
  color: black;
  font-size: 18px;
  margin: 20px;
}

.template_page a {
  color: green;
}

.template_page a:hover {
  color: darkgreen;
}

.tpage h1 {
  font-size: 36px;
  color: black;
}
.tpage .subtitle {
  font-size: 24px;
  color: black;
}
.template_section_title {
  font-weight: bold;
  text-align: left;
}
</style>

<div class='tpage template_page'>
<!-- Header -->
<br/>
<header class="w3-container zw3-center" >
  <h3 style='text-decoration: underline;'><%= title %></h3>
  <% if false %>
  
  <p class="subtitle"><%= subtitle %></p>

  <% top_buttons.each_with_index do |button, idx| %>
    <a href="<%=button[:link]%>" style='text-decoration: none'><button class="btn btn-raised <%= idx == 0 ? 'btn-primary' : 'btn-info' %>" style='border-radius: 3px'><%= button[:text] %></button></a>
  <% end %>

  <div class='contact_us_msg'>Ping us at hi@good-weed.com for anything. ❤️</div>
  <% end %>
</header>


