<!-- First Grid -->
<% rows.each_with_index do |row, idx| %>
  <% 
    color       = '' #string_color(row[:title]) 
    color_class = "nowcast_#{color}"
  %>
  <% if idx%2===0 %>
    
    <div class="w3-row-padding w3-container">

      <div class="display_flex">
        <% if row[:fa_icon].present? %>
        <div class="flex1 ct">
          <i class="fa <%=row[:fa_icon]%> <%=color_class%> w3-padding-64"></i>          
        </div>
        <% end %>

        <div class="flex1 ct">
          <h4 class="template_section_title nowcast <%=color_class%>"><%= row[:title] %></h4>      
          <p class="template_row_content"><%= row[:content] %></p>
        </div>
      </div>
    </div>

  <% else %>
    <div class="w3-row-padding w3-light-grey w3-padding-64 w3-container">
    <div class="display_flex">
      <% if row[:fa_icon].present? %>
      <div class="flex1 ct">
        <i class="fa <%=row[:fa_icon]%> <%=color_class%> w3-padding-64 nowcast_color w3-margin-right"></i>
      </div>
      <% end %>
      <div class="flex1 ct">
        <h4 class="template_section_title <%=color_class%>"><%= row[:title]%> </h4>
        <p class="template_row_content"><%=row[:content]%></p>
      </div>
    </div>
    </div>
  <% end %>

<% end %>
<% if false %>
  <div class="w3-container ct">
    <!-- <div class='contact_us_msg'> Contact us now at hi@good-weed.com to get started if you need any help. </div> -->
    <h3> <%= bottom_msg %> </h3>
    <% top_buttons.each_with_index do |button, idx| %>
      <a href="<%=button[:link]%>" style='text-decoration: none'><button class="btn btn-raised <%= idx == 0 ? 'btn-primary' : 'btn-info' %>" style='border-radius: 3px'><%= button[:text] %></button></a>
    <% end %>
  </div>
  <% end %>
  <br/>
  <br/>
  <br/>
  <br/>
  <br/>
  <br/>
</div> <!-- end about page -->

